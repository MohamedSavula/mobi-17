<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="id_view_account_form_inherit_add_customer_vendor" model="ir.ui.view">
            <field name="name">view_account_form_inherit_add_customer_vendor</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='accounting']//group/group" position="inside">
                    <field name="is_customer"/>
                    <field name="is_vendor"/>
                    <field name="petty_cash_holder"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>