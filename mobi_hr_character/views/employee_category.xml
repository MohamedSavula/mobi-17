<odoo>
    <data>
        <record id="employee_category_view_form" model="ir.ui.view">
            <field name="name">employee.category_view_form</field>
            <field name="model">employee.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_category_action" model="ir.actions.act_window">
            <field name="name">Employee Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="employee_category_menu" parent="hr.menu_human_resources_configuration" action="employee_category_action"
                  sequence="2"/>
    </data>
</odoo>